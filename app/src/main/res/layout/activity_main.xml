<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/main_toolbar" />

            <androidx.viewpager.widget.ViewPager
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="bottom|end|right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabTop"
                    style="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:borderWidth="0dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shirt_icon"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:rippleColor="@color/secondaryDarkColor"
                    app:fabSize="mini"
                    app:tint="@android:color/white" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabBottom"
                    style="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:borderWidth="0dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pants_icon"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:rippleColor="@color/secondaryDarkColor"
                    app:fabSize="mini"
                    app:tint="@android:color/white" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabShoes"
                    style="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:borderWidth="0dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shoes_icon"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:rippleColor="@color/secondaryDarkColor"
                    app:fabSize="mini"
                    app:tint="@android:color/white" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabAdd"
                    style="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:borderWidth="0dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_add_24"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:rippleColor="@color/secondaryDarkColor"
                    app:fabSize="mini"
                    app:tint="@android:color/white" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnFAB"
                    style="@style/AppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:borderWidth="0dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="18dp"
                    android:backgroundTint="@color/secondaryColor"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_view_module_24"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:rippleColor="@color/secondaryDarkColor"
                    app:tint="@android:color/white" />

            </LinearLayout>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
