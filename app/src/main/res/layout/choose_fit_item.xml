<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

           <include android:id="@+id/rowLayer" layout="@layout/choose_fit_item_row"/>
           <include android:id="@+id/rowTop" layout="@layout/choose_fit_item_row"/>
           <include android:id="@+id/rowBottom" layout="@layout/choose_fit_item_row"/>
           <include android:id="@+id/rowShoes" layout="@layout/choose_fit_item_row"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>