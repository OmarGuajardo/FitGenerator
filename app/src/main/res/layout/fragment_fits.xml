<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FitsFragment">

    <LinearLayout
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginLeft"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/poppins_light"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="FIT FOR THE DAY"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_margin="8dp"
            android:id="@+id/itemCardViewTop"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivItemIconTop"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/shirt_icon" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/tvItemNameTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plain Navy Green"
                        />
                    <TextView
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/tvItemClassTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_margin="8dp"
            android:id="@+id/itemCardViewBottom"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivItemIconBottom"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/pants_icon" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/tvItemNameBottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HM Light Grey"
                        />
                    <TextView
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/tvItemClassBottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bottom"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_margin="8dp"
            android:id="@+id/itemCardViewShoes"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rippleColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/shoes_icon"
                    android:id="@+id/ivItemIconShoes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />
                <LinearLayout
                    android:layout_marginLeft="@dimen/marginLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/tvItemNameShoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vans Black Old Skool"
                        />
                    <TextView
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/tvItemClassShoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shoes"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            app:rippleColor="@color/secondaryDarkColor"
            android:backgroundTint="@color/secondaryColor"
            android:textColor="@color/primaryTextColor2"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Love it!"/>
    </LinearLayout>

</FrameLayout>